# Server Configuration
PORT=3001 # Or any other port, e.g., 5000 for backend

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASS=your_db_password
DB_NAME=cv_builder_db
DB_SSL=false # Set to true if using SSL for DB connection (e.g., on Render, Heroku)

# JWT Configuration
JWT_SECRET=your_very_strong_jwt_secret_key_please_change_this
JWT_EXPIRES_IN=1h # e.g., 1h, 7d
REFRESH_TOKEN_EXPIRATION_DAYS=7 # Refresh token validity in days
PASSWORD_RESET_TOKEN_EXPIRATION_MINUTES=60 # Password reset token validity in minutes

# Stripe Configuration (leave blank if not integrating immediately)
STRIPE_SECRET_KEY=sk_test_yourstriSecretKey
STRIPE_WEBHOOK_SECRET=whsec_yourStripeWebhookSecret
STRIPE_PUBLISHABLE_KEY=pk_test_yourStripePublishableKey # For frontend if needed

# Frontend URL (for CORS, redirects, etc.)
FRONTEND_URL=http://localhost:3000 # Or your frontend dev port (Vite default is 5173)

# Node Environment
NODE_ENV=development # 'development', 'production', 'test'
